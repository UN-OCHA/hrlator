{% extends '_page.twig' %}
{% block title %}HRLator{% endblock %}
{% block content %}
    {% set tableWidth=6 %}

    <h2>HRLator Dictionary</h2>
    <div class="row">
        <div class="col-sm-{{ tableWidth }}">
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    <th>Type</th>
                    <th>Initial</th>
                    <th>Replacement</th>
                </tr>
                </thead>
                <tbody>
                  {% for row in rows %}
                  <tr>
                    {% for item in row %}
                      <td>{{ item.Type }}</td>
                      <td>{{ item.Initial }}</td>
                      <td>{{ item.Replacement }}</td>
                    {% endfor %}
                  </tr>
                  {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}
