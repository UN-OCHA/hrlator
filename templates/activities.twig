{% extends '_page.twig' %}
{% block title %}HRLator{% endblock %}
{% block content %}

<h1>HRLator Activities <i class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></i></h1>

<form class="form-horizontal" enctype="multipart/form-data" method="post" action="">

  <div class="form-group" id="hrlator-control">
    <script>hrType = '{{ hrType }}';</script>
    <div class="col-lg-offset-3 col-sm-6">
      <span id="activities-upload" class="btn btn-large btn-default btn-file" disabled="disabled"><i class="glyphicon glyphicon-upload"></i> Load activities file<input type="file" id="csv-data" accept="text/csv"></span>
      <span id="activities-new" class="btn btn-large btn-default btn-file" disabled="disabled"><i class="glyphicon glyphicon-file"></i> Create activities file</span>
      <span id="activities-download" class="btn btn-large btn-default" disabled="disabled"><i class="glyphicon glyphicon-download"></i> Download activities file</span>
    </div>
<!--
    <div class="col-lg-offset-3 col-sm-6">
      <div id="hrlator-status" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
        <span class="srz-only"></span>
      </div>
    </div>
-->
    {% include 'hrlator-show.twig' %}
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div id="hottable"></div>
      <div id="table"></div>
    </div>
    <div id="data-sample" class="col-lg-offset-1 col-sm-10">
      <strong>Expected data format</strong>
      <table class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Organizations</th>
            <th>Clusters</th>
            <th>Locations</th>
            <th>Title</th>
            <th>Primary Beneficiary</th>
            <th>Number of primary beneficiaries</th>
            <th>Status</th>
            <th>Start Date</th>
            <th>End Date</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Organization full name</td>
            <td>Cluster full name</th>
            <td>PCode (with country code ISO2 in front of it)</td>
            <td>Title of the activity</td>
            <td>Type of primary beneficiary</td>
            <td>Number of primary beneficiaries</td>
            <td>ongoing, planned or completed</td>
            <td>eg 2013-10-01</td>
            <td>eg 2013-10-01</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

</form>

{% endblock %}
