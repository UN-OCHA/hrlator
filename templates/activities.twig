{% extends '_page.twig' %}
{% block title %}HRLator{% endblock %}
{% block content %}
    <h1>HRLator Activities</h1>
    <strong>Expected data format</strong>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Organizations</th>
          <th>Clusters</th>
          <th>Locations</th>
          <th>Title</th>
          <th>Primary Beneficiary</th>
          <th>Number of primary beneficiaries</th>
          <th>Status</th>
          <th>Start Date</th>
          <th>End Date</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>Organization full name</td>
          <td>Cluster Full name</th>
          <td>PCode (with country code ISO2 in front of it)</td>
          <td>Title of the activity</td>
          <td>Type of primary beneficiary</td>
          <td>Number of primary beneficiaries</td>
          <td>ongoing, planned or completed</td>
          <td>eg 2013-10-01</td>
          <td>eg 2013-10-01</td>
        </tr>
      </tbody>
    </table>
    <form class="form-horizontal" enctype="multipart/form-data" method="post" action="">
        <div class="form-group">
            <label for="csvfile" class="col-sm-3 control-label">CSV File</label>

            <div class="col-sm-5">
                <input type="file" class="form-control" id="csvActivities" name='csvActivities' required="required" accept="text/csv" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-3 col-sm-8">
                <button id="hrlator-download-csv" class="hrlator-button btn btn-default">Download CSV</button>
<!--
                <button type="submit" class="btn btn-default">Submit</button>
-->
            </div>
        </div>
    </form>

    <script>
      var hr_organizations = {{ organizations | raw }};
      var hr_clusters = {{ clusters | raw }};
      var hr_dictionary = {{ dictionary | raw }};
    </script>
{% endblock %}
