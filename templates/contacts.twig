{% extends '_page.twig' %}
{% block title %}HRLator{% endblock %}
{% block content %}

<h1>HRLator Contacts <i class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></i></h1>

<form class="form-horizontal" enctype="multipart/form-data" metdod="post" action="">

  <div class="form-group" id="hrlator-contacts">
    <script>hrType = '{{ hrType }}';</script>
    <div class="col-lg-offset-3 col-sm-6">
      <span id="contacts-upload" class="btn btn-large btn-default btn-file" disabled="disabled"><i class="glyphicon glyphicon-upload"></i> Load contacts file<input type="file" id="csv-data" accept="text/csv,application/vnd.ms-excel,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet"></span>
      <span id="contacts-new" class="btn btn-large btn-default btn-file" disabled="disabled"><i class="glyphicon glyphicon-file"></i> Create contacts file</span>
      <span id="contacts-download" class="btn btn-large btn-default" disabled="disabled"><i class="glyphicon glyphicon-download"></i> Download contacts file</span>
    </div>

    {% include 'hrlator-show.twig' %}

  </div>

  <div class="row">
    <div class="col-sm-12">
      <div id="hottable"></div>
    </div>
    <div id="data-sample" class="col-sm-12">
      <div class="panel panel-default">
        <div class="panel-heading">Expected data format</div>
        <div class="panel panel-body">
          <div class="div-overflow-auto">
            <table class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Clusters</th>
                  <th>Salutation</th>
                  <th>First name</th>
                  <th>Last name</th>
                  <th>Email</th>
                  <th>Telephones</th>
                  <th>Organization</th>
                  <th>Organization Type</th>
                  <th>Job Title</th>
                  <th>Location</th>
                  <th>Coordination Hub</th>
                  <th>Fundings</th>
                  <th>Theme(s)</th>
                  <th>Emergencies</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td>Clusters full name</td>
                  <td>Salutation</td>
                  <td>First name</td>
                  <td>Last name</td>
                  <td>Email</td>
                  <td>Telephones</td>
                  <td>Organization full name</td>
                  <td>Organization Type</td>
                  <td>Job Title</td>
                  <td>Location</td>
                  <td>Coordination Hub</td>
                  <td>Fundings</td>
                  <td>Theme(s)</td>
                  <td>Emergencies</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

  </div>

</form>

{% endblock %}
