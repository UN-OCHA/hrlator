{% extends '_page.twig' %}
{% block title %}HRLator{% endblock %}
{% block content %}

<h1>HRLator Contacts</h1>

<form class="form-horizontal" enctype="multipart/form-data" method="post" action="">

  <div class="form-group" id="hrlator-contacts">
    <div class="col-lg-offset-3 col-sm-6">
      <button class="btn btn-large"><i class="glyphicon glyphicon-open"></i> Load contacts file</button>
      <button class="btn btn-large"><i class="glyphicon glyphicon-file"></i> New contacts file</button>
    </div>
  </div>

        <div class="form-group" id="hrlator-control">
          <label for="csvfile" class="col-sm-3 control-label">CSV File</label>
          <div class="col-sm-5">
            <input type="file" class="form-control" id="csvContacts" name='csvContacts' required="required" accept="text/csv" />
            <div id="hrlator-status" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
              <span class="srz-only"></span>
            </div>
          </div>
        </div>

          <div class="row">
            <div class="col-sm-12">
              <div id="hottable"></div>
            </div>
          </div>
        <div class="form-group">
            <div class="col-lg-offset-3 col-sm-8">
                <button id="hrlator-download-csv" class="hrlator-button btn btn-default">Download CSV</button>
<!--
                <button type="submit" class="btn btn-default">Submit</button>
                <button id="contacts-upload" class="btn btn-default">Upload</button>
-->
            </div>
        </div>
</form>

{% endblock %}
