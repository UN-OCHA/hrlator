{% extends '_page.twig' %}
{% block title %}HRLator{% endblock %}
{% block content %}

<h1>HRLator Contacts <i class="glyphicon glyphicon-refresh glyphicon-refresh-animate"></i></h1>

<form class="form-horizontal" enctype="multipart/form-data" method="post" action="">

  <div class="form-group" id="hrlator-contacts">
    <script>hrType = '{{ hrType }}';</script>
    <div class="col-lg-offset-3 col-sm-6">
      <span id="contacts-upload" class="btn btn-large btn-default btn-file" disabled="disabled"><i class="glyphicon glyphicon-upload"></i> Load contacts file<input type="file" id="csv-data" accept="text/csv"></span>
      <span id="contacts-new" class="btn btn-large btn-default btn-file" disabled="disabled"><i class="glyphicon glyphicon-file"></i> Create contacts file</span>
      <span id="contacts-download" class="btn btn-large btn-default" disabled="disabled"><i class="glyphicon glyphicon-download"></i> Download contacts file</span>
    </div>
    <div class="col-lg-offset-3 col-sm-6">
      <div id="hrlator-status" class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
        <span class="srz-only"></span>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <div id="hottable"></div>
    </div>
  </div>

</form>

{% endblock %}
